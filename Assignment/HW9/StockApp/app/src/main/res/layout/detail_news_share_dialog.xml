<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/news_share_dialog"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/news_img1" />

    <TextView
        android:id="@+id/news_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Judge allows  lawsuit from AAPL investors over ‘credible’ claims of being misled"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_twitter_logo_dialog"
            android:id="@+id/news_share_twitter"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_chrome"
            android:id="@+id/news_share_chrome"/>

    </LinearLayout>

</LinearLayout>