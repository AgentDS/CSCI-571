<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#cc99ff</item>
        <item name="colorSecondary">@color/app_blue_eBay</item>
    </style>

    <style name="AppTheme.Detail" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_blue_eBay</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#cc99ff</item>
        <item name="colorSecondary">@color/app_blue_eBay</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="colorPrimary">@color/app_blue_eBay</item>
        <item name="colorPrimaryDark">@color/app_blue_eBay</item>
    </style>


</resources>